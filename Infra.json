{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "sqlServerName": {
      "type": "string"
    },
    "adminLogin": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "keyVaultName": {
      "type": "string"
    },
    "aksClusterName": {
      "type": "string"
    },
    "dnsPrefix": {
      "type": "string"
    },
    "devOpsServicePrincipalObjectId": {
      "type": "string",
      "metadata": {
        "description": "Object ID of Azure DevOps Service Principal to be granted Key Vault Secrets Officer role."
      }
    },
    "aksKubeletIdentityName": {
      "type": "string",
      "defaultValue": "aks-kubelet-identity"
    }
  },
  "variables": {
    "keyVaultResourceId": "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]",
    "aksKubeletIdentityResourceId": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('aksKubeletIdentityName'))]",
    "roleDefinitionIdKeyVaultSecretsUser": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', 'b86a8fe4-44ce-4948-aee5-eccb2c155cd7')]",
    "roleDefinitionIdKeyVaultSecretsOfficer": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', 'b86a8fe4-44ce-4948-aee5-eccb2c155cd7')]",
    "roleDefinitionIdContributor": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', '4633458b-17de-408a-b874-0445c86b69e6')]"
  },
  "resources": [
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2021-02-01-preview",
      "name": "[parameters('sqlServerName')]",
      "location": "[parameters('location')]",
      "properties": {
        "administratorLogin": "[parameters('adminLogin')]",
        "administratorLoginPassword": "[parameters('adminPassword')]",
        "version": "12.0"
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2021-02-01-preview",
      "name": "[format('{0}/{1}', parameters('sqlServerName'), 'bankingdb')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
      ],
      "properties": {}
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2022-07-01",
      "name": "[parameters('keyVaultName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "tenantId": "[subscription().tenantId]",
        "enableRbacAuthorization": true
      }
    },
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2023-01-31",
      "name": "[parameters('aksKubeletIdentityName')]",
      "location": "[parameters('location')]"
    },
    {
      "type": "Microsoft.ContainerService/managedClusters",
      "apiVersion": "2023-04-01",
      "name": "[parameters('aksClusterName')]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[variables('aksKubeletIdentityResourceId')]": {}
        }
      },
      "properties": {
        "dnsPrefix": "[parameters('dnsPrefix')]",
        "agentPoolProfiles": [
          {
            "name": "nodepool1",
            "count": 1,
            "vmSize": "Standard_DS2_v2",
            "osType": "Linux",
            "type": "VirtualMachineScaleSets",
            "mode": "System"
          }
        ],
        "servicePrincipalProfile": {
          "clientId": "msi"
        },
        "enableRBAC": true
      },
      "dependsOn": [
        "[variables('aksKubeletIdentityResourceId')]"
      ]
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[guid(variables('keyVaultResourceId'), parameters('aksClusterName'), 'AKSKeyVaultUser')]",
      "properties": {
        "roleDefinitionId": "[variables('roleDefinitionIdContributor')]",
        "principalId": "[reference(resourceId('Microsoft.ContainerService/managedClusters', parameters('aksClusterName')), '2023-04-01', 'Full').identity.principalId]",
        "scope": "[resourceGroup().id]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.ContainerService/managedClusters', parameters('aksClusterName'))]",
        "[variables('keyVaultResourceId')]"
      ]
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[guid(variables('aksKubeletIdentityResourceId'), parameters('aksKubeletIdentityName'), 'KubeletKeyVaultSecretsUser')]",
      "properties": {
        "roleDefinitionId": "[variables('roleDefinitionIdKeyVaultSecretsUser')]",
        "principalId": "[reference(variables('aksKubeletIdentityResourceId'), '2018-11-30').principalId]",
        "scope": "[variables('keyVaultResourceId')]"
      },
      "dependsOn": [
        "[variables('aksKubeletIdentityResourceId')]",
        "[variables('keyVaultResourceId')]"
      ]
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[guid(resourceGroup().id, parameters('devOpsServicePrincipalObjectId'), 'KeyVaultSecretsOfficer')]",
      "properties": {
        "roleDefinitionId": "[variables('roleDefinitionIdKeyVaultSecretsOfficer')]",
        "principalId": "[parameters('devOpsServicePrincipalObjectId')]",
        "scope": "[variables('keyVaultResourceId')]"
      },
      "dependsOn": [
        "[variables('keyVaultResourceId')]"
      ]
    }
  ],
  "outputs": {
    "sqlServerFQDN": {
      "type": "String",
      "value": "[reference(resourceId('Microsoft.Sql/servers', parameters('sqlServerName')), '2021-02-01-preview').fullyQualifiedDomainName]"
    },
    "databaseName": {
      "type": "string",
      "value": "bankingdb"
    },
    "sqlAdminUsername": {
      "type": "string",
      "value": "[parameters('adminLogin')]"
    }
  }
}
